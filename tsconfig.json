{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts",
    "src/config/**/*",
    "controllers/**/*",
    "src/middleware/**/*",
    "src/models/**/*",
    "src/routes/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}

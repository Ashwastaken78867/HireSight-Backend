{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts",
    "config/**/*",
    "controllers/**/*",
    "middleware/**/*",
    "models/**/*",
    "routes/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
